@model IEnumerable<PurebaClase1.Models.dbModels.CategoriaTicket>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="/css/CRUDS.css">
<h1>Inicio</h1>

<p>
    <a asp-action="Create">Crear nueva categoria</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCategoria">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdCategoria">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCategoria">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
