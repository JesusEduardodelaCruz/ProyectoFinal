@model PurebaClase1.Models.dbModels.RopaTalla

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>RopaTalla</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdRopa" class="control-label"></label>
                <select asp-for="IdRopa" class ="form-control" asp-items="ViewBag.IdRopa"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdTalla" class="control-label"></label>
                <select asp-for="IdTalla" class ="form-control" asp-items="ViewBag.IdTalla"></select>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
