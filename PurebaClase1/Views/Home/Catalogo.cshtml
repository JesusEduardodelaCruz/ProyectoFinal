@using PurebaClase1.ViewModel;

@model CatalogoViewModel
@{
    ViewData["Title"] = "Catalogo";
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script src="/js/catalogo.js"></script>


<link rel="stylesheet" href="/css/Catalogo.css">
<div class="container-fluid">
    <div class="row">
        <nav class="col-md-2 d-none d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Inicio</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink1" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">Ropa para Hombres</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink1">
                            <li><a class="dropdown-item" href="#">Camisetas</a></li>
                            <li><a class="dropdown-item" href="#">Pantalones</a></li>
                            <li><a class="dropdown-item" href="#">Abrigos</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink2" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">Ropa para Mujeres</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink2">
                            <li><a class="dropdown-item" href="#">Vestidos</a></li>
                            <li><a class="dropdown-item" href="#">Blusas</a></li>
                            <li><a class="dropdown-item" href="#">Faldas</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Camisas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Polo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Sacos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Corbatas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Zapatos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Carteras</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Sacos</a>
                    </li>
                </ul>
            </div>
        </nav>

        <main class="col-md-10 ms-sm-auto px-4">
            <div class="container-fluid">
                    <div class="row">
                        @foreach (Ropa ropa in Model.Ropa)
                        {
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="card h-80" style="width: 16rem;">
                                    <img src="@ropa.Imagen" class="card-img-top" alt="Producto 1">
                                    <div class="card-body">
                                        <h5 class="card-title">@ropa.Titulo</h5>
                                        <p class="card-text">@ropa.Descripcion</p>
                                        <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#modalDetalle" data-titulo="@ropa.Titulo" data-descripcion="@ropa.Descripcion" data-imagen="@ropa.Imagen">
                                            Ver
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                </div>
            </div>
        </main>
    </div>
</div>

<!-- modal  -->

<div class="modal fade" id="modalDetalle" tabindex="-1" aria-labelledby="modalDetalleLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalDetalleLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <img id="modalImagen" src="" alt="Imagen de la prenda">
                <p id="modalDescripcion"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Agregar al carrito</button>
            </div>
        </div>
    </div>
</div>




